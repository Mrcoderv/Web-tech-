    <title>JavaScript Examples with Terminals</title>
    <script>
        function printToSpecificTerminal(terminalId, message) {
            const terminal = document.getElementById(terminalId);
            terminal.value += message + "\n";
            terminal.scrollTop = terminal.scrollHeight;
        }

        function Discount() {
            let userInput = prompt("Please enter purchase value:");
            let purchaseValue = parseFloat(userInput);
            let terminalId = "discount-terminal";

            if (isNaN(purchaseValue) || purchaseValue < 0) {
                printToSpecificTerminal(terminalId, "Invalid input. Please enter a positive number.");
                return;
            }

            let discount = 0;
            if (purchaseValue >= 10000) {
                discount = 0.2;
            } else if (purchaseValue >= 5000) {
                discount = 0.1;
            }

            let discountAmount = purchaseValue * discount;
            let finalAmount = purchaseValue - discountAmount;
            printToSpecificTerminal(terminalId, `Discounted amount: ${discountAmount}`);
            printToSpecificTerminal(terminalId, `Final amount: ${finalAmount}`);
        }

        function LeapYear() {
            let userInput = prompt("Please enter Year:");
            let year = parseInt(userInput);
            let terminalId = "leap-year-terminal";

            if (isNaN(year) || year < 0) {
                printToSpecificTerminal(terminalId, "Invalid input. Please enter a valid year.");
                return;
            }

            if ((year % 400 === 0) || (year % 4 === 0 && year % 100 !== 0)) {
                printToSpecificTerminal(terminalId, "Year is a leap year");
            } else {
                printToSpecificTerminal(terminalId, "Year is not a leap year");
            }
        }

        function FizzBuzz() {
            let userInput = prompt("Please enter a number:");
            let number = parseInt(userInput);
            let terminalId = "fizzbuzz-terminal";

            if (isNaN(number)) {
                printToSpecificTerminal(terminalId, "Invalid input. Please enter a valid number.");
                return;
            }

            if (number % 3 === 0 && number % 5 === 0) {
                printToSpecificTerminal(terminalId, "FizzBuzz");
            } else if (number % 3 === 0) {
                printToSpecificTerminal(terminalId, "Fizz");
            } else if (number % 5 === 0) {
                printToSpecificTerminal(terminalId, "Buzz");
            } else {
                printToSpecificTerminal(terminalId, number);
            }
        }

        function week() {
            let userInput = prompt("Please enter the day of the week:");
            let day = userInput?.toLowerCase();
            let terminalId = "week-terminal";

            if (!day) {
                printToSpecificTerminal(terminalId, "Invalid input. Please enter a day of the week.");
                return;
            }

            switch (day) {
                case "monday":
                    printToSpecificTerminal(terminalId, "Start of the workweek");
                    break;
                case "friday":
                    printToSpecificTerminal(terminalId, "Almost weekend");
                    break;
                case "saturday":
                case "sunday":
                    printToSpecificTerminal(terminalId, "Weekend");
                    break;
                case "tuesday":
                case "wednesday":
                case "thursday":
                    printToSpecificTerminal(terminalId, "Midweek");
                    break;
                default:
                    printToSpecificTerminal(terminalId, "Invalid day");
                    break;
            }
        }

        function color() {
            let userInput = prompt("Please enter a color:");
            let color = userInput?.toLowerCase();
            let terminalId = "color-terminal";

            if (!color) {
                printToSpecificTerminal(terminalId, "Invalid input. Please enter a color.");
                return;
            }

            switch (color) {
                case "red":
                    printToSpecificTerminal(terminalId, "Stop");
                    break;
                case "yellow":
                    printToSpecificTerminal(terminalId, "Slow down");
                    break;
                case "green":
                    printToSpecificTerminal(terminalId, "Go");
                    break;
                default:
                    printToSpecificTerminal(terminalId, "Invalid color");
                    break;
            }
        }
    </script>
    <style>
        body {
